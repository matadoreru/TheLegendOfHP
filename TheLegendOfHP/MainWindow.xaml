<Window x:Class="TheLegendOfHP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheLegendOfHP"
        mc:Ignorable="d"
        Title="The Legend of HP" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!-- Imatge principal -->
        <TextBlock Text="The Legend of HP" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="btnPlay" Grid.Row="2" Content="Play" Margin="5"
                Click="btnPlay_Click" FontSize="25" Height="50"/>
        <Button x:Name="btnExit" Grid.Row="4" Content="Exit" Margin="5" 
                Click="btnExit_Click" FontSize="25" Height="50"/>
    </Grid>
</Window>
